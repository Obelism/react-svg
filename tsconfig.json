{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["esnext", "dom"],
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictBindCallApply": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"target": "ES2018",
		"baseUrl": "./src",
		"noEmitOnError": true,
		"incremental": true
	},
	"exclude": [
		"./**/dist",
		"examples",
		"example",
		"tests",
		"vitest.config.ts",
		"build.mjs"
	],
	"watchOptions": {
		"watchFile": "useFsEvents",
		"watchDirectory": "useFsEvents",
		"fallbackPolling": "dynamicPriority"
	}
}
